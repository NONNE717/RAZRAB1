<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".PolomkiActivity">
    <TextView
        android:id="@+id/polomoch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#DC6641"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:text="Поломки" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/patrub" />

            <TextView
                android:id="@+id/text_patrubk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#DC6641"
                android:textStyle="normal"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                android:text="Патрубки охлаждения" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ddmd" />
            <TextView
                android:id="@+id/ddm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#DC6641"
                android:textStyle="normal"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                android:text="Датчик давления масла" />
            <ImageView
                android:id="@+id/razrabtext"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/razrab" />
            <TextView
                android:id="@+id/razrablogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#DC6641"
                android:textStyle="normal"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                android:text="Остальное (В разработке)" />
            <ImageView
                android:id="@+id/razrabtext2"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/razrab" />
            <TextView
                android:id="@+id/razrablogo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#DC6641"
                android:textStyle="normal"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                android:text="Остальное2 (В разработке)" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>