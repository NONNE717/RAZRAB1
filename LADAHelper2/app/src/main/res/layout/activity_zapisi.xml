<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".AutomobActivity">


    <TextView
        android:id="@+id/textzapisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Мои записи"
        android:textColor="#DC6641"
        android:textStyle="normal"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/enterZapis"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#DC6641"
        android:layout_marginTop="40dp"
        android:textColor="#DC6641"
        android:layout_gravity="center"
        android:hint="Введите запись"
        />
    <Button
        android:id="@+id/enterButZpis"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#121315"
        android:backgroundTint="#DC6641"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="Добавить" />

    <ListView
        android:id="@+id/zappis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>